<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapp.MainActivity">

    <Button
        android:id="@+id/buttonGif"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:onClick="searchSongs"
        android:text="@string/goto_song"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSong"
        tools:text="@string/goto_song" />

    <Button
        android:id="@+id/buttonSong"
        android:layout_width="371dp"
        android:layout_height="56dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:onClick="gotoGif"
        android:text="@string/goto_gif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/goto_gif" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:onClick="gotoPrivacy"
        android:text="@string/goto_privacy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGif"
        tools:text="@string/goto_privacy" />

    <Button
        android:id="@+id/buttonBackground"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:onClick="loadBackground"
        android:text="@string/open_apps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSettings"
        tools:text="@string/open_apps" />

    <Button
        android:id="@+id/buttonPuzzle"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:onClick="loadBackground"
        android:text="@string/puzzle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBackground"
        tools:text="@string/puzzle" />

    <Button
        android:id="@+id/buttonSecret"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:layout_marginTop="30dp"
        android:onClick="gotoSecret"
        android:text="@string/secret"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPuzzle"
        tools:text="@string/secret" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/owner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/owner" />

</android.support.constraint.ConstraintLayout>
